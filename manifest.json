{
  "manifest_version": 2,
  "name": "Android Messages Launcher",
  "description": "Launches the new Android Messages in a dedicated window.",
  "version": "0.0.1",
  "author": "Jon Grffith",
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions" : [
    "tabs",
    "http://*/*",
    "https://*/*"
   ],
  "browser_action": {
    "default_icon": "messages.png"
  }
}
