{
  "manifest_version": 2,
  "name": "Google Messages Launcher",
  "description": "Launches Google Messages in a dedicated window.",
  "version": "0.0.3",
  "author": "Jon Grffith",
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon_128.png"
  }
}
